# 环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# ==================== 服务配置 ====================
NODE_ENV=production

# ==================== 性能监控 ====================
# 是否启用性能监控
PERFORMANCE_MONITOR=true

# 统计信息输出间隔（毫秒）
PERF_LOG_INTERVAL=10000

# 统计数据重置间隔（毫秒）
PERF_RESET_INTERVAL=60000

# ==================== 资源限制 ====================
# 最大内存限制（MB）
MAX_MEMORY_MB=512

# 最大并发请求数
MAX_CONCURRENT=20

# ==================== 限流配置 ====================
# 是否启用限流
RATE_LIMIT_ENABLED=true

# 最大每秒请求数
MAX_RPS=100

# 最大每分钟请求数
MAX_RPM=1000

# ==================== 缓存配置 ====================
# 是否启用缓存
CACHE_ENABLED=false

# 缓存过期时间（毫秒）
CACHE_TTL=300000

# 缓存最大条目数
CACHE_MAX_SIZE=1000

# ==================== 日志配置 ====================
# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 是否记录请求日志
LOG_REQUESTS=false

# 是否记录错误日志
LOG_ERRORS=true

